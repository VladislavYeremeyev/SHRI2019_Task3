{
	"name": "shri-ext",
	"displayName": "shri-ext",
	"description": "The entrance task of Yandex Web Development School.",
	"repository": {
		"type": "git",
		"url": "https://github.com/VladislavYeremeyev/SHRI2019_Task3"
	},
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:example.showPreviewToSide",
		"onLanguage:json",
		"onLanguage:jsonc"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Example extension",
			"properties": {
				"example.enable": {
					"type": "boolean",
					"default": true,
					"description": "Enable/disable example linter."
				},
				"example.severity.FORM_INPUT_AND_LABEL_SIZES_SHOULD_BE_EQUAL": {
					"type": "string",
					"enum": [
						"Error",
						"Warning",
						"Information",
						"Hint",
						"None"
					],
					"default": "Warning",
					"description": "The 'FORM_INPUT_AND_LABEL_SIZES_SHOULD_BE_EQUAL' rule severity."
				},
				"example.severity.FORM_CONTENT_VERTICAL_SPACE_IS_INVALID": {
					"type": "string",
					"enum": [
						"Error",
						"Warning",
						"Information",
						"Hint",
						"None"
					],
					"default": "Warning",
					"description": "The 'FORM_CONTENT_VERTICAL_SPACE_IS_INVALID' rule severity."
        },
        "example.severity.FORM_CONTENT_HORIZONTAL_SPACE_IS_INVALID": {
					"type": "string",
					"enum": [
						"Error",
						"Warning",
						"Information",
						"Hint",
						"None"
					],
					"default": "Warning",
					"description": "The 'FORM_CONTENT_HORIZONTAL_SPACE_IS_INVALID' rule severity."
        },
        "example.severity.FORM_CONTENT_ITEM_INDENT_IS_INVALID": {
					"type": "string",
					"enum": [
						"Error",
						"Warning",
						"Information",
						"Hint",
						"None"
					],
					"default": "Warning",
					"description": "The 'FORM_CONTENT_ITEM_INDENT_IS_INVALID' rule severity."
        },
        "example.severity.FORM_HEADER_TEXT_SIZE_IS_INVALID": {
					"type": "string",
					"enum": [
						"Error",
						"Warning",
						"Information",
						"Hint",
						"None"
					],
					"default": "Warning",
					"description": "The 'FORM_HEADER_TEXT_SIZE_IS_INVALID' rule severity."
        },
        "example.severity.FORM_HEADER_VERTICAL_SPACE_IS_INVALID": {
					"type": "string",
					"enum": [
						"Error",
						"Warning",
						"Information",
						"Hint",
						"None"
					],
					"default": "Warning",
					"description": "The 'FORM_HEADER_VERTICAL_SPACE_IS_INVALID' rule severity."
        },
        "example.severity.FORM_HEADER_HORIZONTAL_SPACE_IS_INVALID": {
					"type": "string",
					"enum": [
						"Error",
						"Warning",
						"Information",
						"Hint",
						"None"
					],
					"default": "Warning",
					"description": "The 'FORM_HEADER_HORIZONTAL_SPACE_IS_INVALID' rule severity."
        },
        "example.severity.FORM_FOOTER_VERTICAL_SPACE_IS_INVALID": {
					"type": "string",
					"enum": [
						"Error",
						"Warning",
						"Information",
						"Hint",
						"None"
					],
					"default": "Warning",
					"description": "The 'FORM_FOOTER_VERTICAL_SPACE_IS_INVALID' rule severity."
        },
        "example.severity.FORM_FOOTER_HORIZONTAL_SPACE_IS_INVALID": {
					"type": "string",
					"enum": [
						"Error",
						"Warning",
						"Information",
						"Hint",
						"None"
					],
					"default": "Warning",
					"description": "The 'FORM_FOOTER_HORIZONTAL_SPACE_IS_INVALID' rule severity."
        },
        "example.severity.FORM_FOOTER_TEXT_SIZE_IS_INVALID": {
					"type": "string",
					"enum": [
						"Error",
						"Warning",
						"Information",
						"Hint",
						"None"
					],
					"default": "Warning",
					"description": "The 'FORM_FOOTER_TEXT_SIZE_IS_INVALID' rule severity."
        },
        "example.severity.TEXT_SEVERAL_H1": {
					"type": "string",
					"enum": [
						"Error",
						"Warning",
						"Information",
						"Hint",
						"None"
					],
					"default": "Warning",
					"description": "The 'TEXT_SEVERAL_H1' rule severity."
        },
        "example.severity.TEXT_INVALID_H2_POSITION": {
					"type": "string",
					"enum": [
						"Error",
						"Warning",
						"Information",
						"Hint",
						"None"
					],
					"default": "Warning",
					"description": "The 'TEXT_INVALID_H2_POSITION' rule severity."
        },
        "example.severity.TEXT_INVALID_H3_POSITION": {
					"type": "string",
					"enum": [
						"Error",
						"Warning",
						"Information",
						"Hint",
						"None"
					],
					"default": "Warning",
					"description": "The 'TEXT_INVALID_H3_POSITION' rule severity."
				}
			}
		},
		"commands": [
			{
				"command": "example.showPreviewToSide",
				"title": "Show preview",
				"category": "Example",
				"icon": {
					"light": "./media/PreviewIcon16x.svg",
					"dark": "./media/PreviewIcon16x_dark.svg"
				}
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "example.showPreviewToSide",
					"when": "editorLangId == json",
					"group": "navigation"
				},
				{
					"command": "example.showPreviewToSide",
					"when": "editorLangId == jsonc",
					"group": "navigation"
				}
			]
		},
		"keybindings": [
			{
				"command": "example.showPreviewToSide",
				"key": "shift+ctrl+v",
				"mac": "shift+cmd+v",
				"when": "editorLangId == json"
			},
			{
				"command": "example.showPreviewToSide",
				"key": "shift+ctrl+v",
				"mac": "shift+cmd+v",
				"when": "editorLangId == jsonc"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test",
		"prettier": "prettier --config .prettierrc.json --write src/**/*.ts",
		"lint": "tslint -c tslint.json 'src/**/*.ts' 'tests/**/*.spec.ts' --fix"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"prettier": "^1.18.2",
		"tslint": "^5.12.1",
		"tslint-config-airbnb": "^5.11.1",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.4.5"
	},
	"dependencies": {
		"bem-xjst": "^8.9.4",
		"json-to-ast": "^2.1.0",
		"request-light": "^0.2.4",
		"vscode": "^1.1.34",
		"vscode-languageclient": "^5.2.1",
		"vscode-languageserver": "^5.2.1",
		"vscode-nls": "^4.1.1"
	}
}
